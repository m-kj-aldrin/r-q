<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>re-quest</title>
	<script type="module" src="{{ url_for('static', filename='js/re-quest.js') }}"></script>

	<style>
		body {
			font-family: sans-serif;
		}

		.test {
			color: red;
		}

		[data-user] {
			margin-bottom: 1rem;
			border: 1px currentColor solid;
			padding: 4px;
			border-radius: 1px;
		}

		re-target,
		re-quest {
			display: contents;
		}
	</style>
</head>

<body>


	<re-flect>
		<re-target name="random-number"></re-target>

		<re-quest endpoint="/users" mime="text/html">
			<re-get fire="load"></re-get>
		</re-quest>

		<br>

		<div>
			<re-quest endpoint="/users" method="POST" mime="text/html">
				<form>
					<input type="text" name="name" id="name" placeholder="name">
					<input type="text" name="fruit" id="fruit" placeholder="fruit">
					<input type="submit" value="send">
				</form>
			</re-quest>
		</div>

		<div class="test">
			<h2>OKIDOKI</h2>
			<re-target name="users"></re-target>
		</div>

	</re-flect>

</body>

</html>